{
  "compilerOptions": {
    "strict": false,
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node"
    ]
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "include": [ "./src/**/*.ts" ],
  "exclude": [ "node_modules"]
}